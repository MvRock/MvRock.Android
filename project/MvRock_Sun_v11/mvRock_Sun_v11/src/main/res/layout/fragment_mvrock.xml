        <!--<ImageView-->
        <!--android:id="@+id/station_cancel"-->
        <!--android:layout_width="25sp"-->
        <!--android:layout_height="25sp"-->
        <!--android:contentDescription="@string/send_song"-->
        <!--android:src="@drawable/red_close" />-->
        <!--</LinearLayout>-->

        <!--<ImageView-->
        <!--android:id="@+id/right_drawer_control_button"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:src="@drawable/mvrock_phone_1_icon"-->
        <!--android:layout_gravity="bottom|right" />-->

        <ImageView
            android:id="@+id/left_drawer_control_button"
            android:layout_width="60sp"
            android:layout_height="60sp"

            android:layout_gravity="bottom|left"/>
    </FrameLayout>

    <!-- left -->
    <FrameLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/material_blue_grey_800"
        android:orientation="vertical"/>

    <!-- right-->
    <FrameLayout
        android:id="@+id/right_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical"/>
</android.support.v4.widget.DrawerLayout>